package myProejct;

import java.util.ArrayList;

public class Level2 {
	public static void main(String[] args) {
		Solution2 sol = new Solution2();
		sol.solution("DAAAAAAABBBBBBB");
	}
}

class Solution2 {
    public int solution(String name) {
    	int minCnt = 0;
    	boolean counting = false;
    	int indexA = 0;
    	int cnt1 = 0;
    	int cnt2 = 0;
    	for(int i=0; i<name.length(); i++) {
    		minCnt +=calMin(name.charAt(i));
    		if(counting) {
    			if(name.charAt(i)!='A') {
    				cnt2 = cnt1>cnt2? cnt1 : cnt2;
    				cnt1 = 0; 
    				counting = false;
    			}
    		}
    		if(name.charAt(i)=='A') {
    			cnt1 ++;
    			indexA = !counting?  i : indexA;
    			counting=true;
    		}
    	}
    	int right = name.length()-1;
    	int left = name.length()-indexA-1;
    	System.out.println("index : " + indexA);
    	System.out.println(right);
    	System.out.println(left);
    	minCnt += name.length()-1;
    	return minCnt;
    }
    private int calMin(char ch) {
    	int order = (int)ch-65;
    	int reverse = 90-(int)ch;
    	return order < reverse ? order : reverse+1;
    }
}
