package myProejct;

import java.util.ArrayList;

public class Level2 {
	public static void main(String[] args) {
		Solution2 sol = new Solution2();
		sol.solution("DBBAAAAAB");
	}
}

class Solution2 {
    public int solution(String name) {
    	int minCnt = 0;
    	boolean counting = false;
    	int cnt1 = 0;
    	int cnt2 = 0;
    	for(char c : name.toCharArray()) {
    		minCnt +=calMin(c);
    		if(counting) {
    			if(c!='A') {
    				cnt2 = cnt1>cnt2? cnt1 : cnt2;
    				cnt1 = 0; 
    				counting = false;
    			}
    		}
    		if(c=='A') {
    			cnt1 ++;
    			counting=true;
    		}
    	}
    	System.out.println(cnt2);
    	
    	//left right
    	
    	minCnt += name.length()-1;
    	

    	System.out.println(minCnt);
    	return minCnt;
    }
    private int calMin(char ch) {
    	int order = (int)ch-65;
    	int reverse = 90-(int)ch;
    	return order < reverse ? order : reverse+1;
    }
}
