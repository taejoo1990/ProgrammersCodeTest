class Dice{
	private int score;
	private boolean isEvenNumber;
	public Dice(int score) {
		if(score<1 || score>6) {
			Exception ex = new Exception();
			ex.getStackTrace();
		}
		this.score=score;
	}

	public int getScore() {
		return score;
	}

