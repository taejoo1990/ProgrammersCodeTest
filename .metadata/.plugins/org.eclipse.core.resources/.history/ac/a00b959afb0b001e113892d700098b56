}
class Solution6{
    public int solution(int[] arr, int idx) {
        if(arr.length<=idx) {
        	return -1;
        }
    	for(int i=idx+1; i<arr.length; i++) {
        	if(arr[i]==1) {
        		return i;
        	}
        }
        return -1;
    }
}

